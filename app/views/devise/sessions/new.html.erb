<div class="content content-sign">
  <div class="container container-sign">
    <div class="row row-sign">
      <div class="col-md-6 order-md-2 col-sign d-flex align-items-center">
        <%= cl_image_tag("undraw_suburbs_wk7ulf", class: "img-fluid") %>
      </div>

      <div class="col-md-6 contents col-sign">
        <div class="row justify-content-center">
          <div class="col-md-8 white-box">
            <div class="mb-4">
              <h3>Connexion <strong>Openup Elixir</strong></h3>
             </div>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.input :email,
                              label: "Votre adresse email",
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              label: "Votre mot de passe",
                              required: true,
                              input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me,
                              label: "Se souvenir de moi",
                              as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Se connecter", class: "btn btn-primary btn-block" %>
                </div>
              <% end %>

              <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
