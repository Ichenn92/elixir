<div class="container">
  <div class="row mt-5 mb-5 p-5">
    <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4">
      <h2>Mot de passe oublié?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      label: "Votre adresse email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      hint: "Nous vous enverrons des instructions pour réinitialiser votre mot de passe" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer", class: "btn btn-primary btn-block" %>

        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
