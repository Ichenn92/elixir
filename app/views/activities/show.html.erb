<div class="container">
  <div class="row activity-name">
    <h1><%= @activity.name %></h1>
  </div>
  <div class="row activity-user">
    <div class="col-md-6">
      <%= cl_image_tag(@activity.user.photo.key, width: 400, height: 300, crop: :fill, class: "avatar-large") %>
      <h2><%= @activity.user.nickname %></h2>
    </div>
    <div class="col-md-6">
      <%= link_to "Ses activités", "/", class: ".button-outline-green" %>
    </div>
  </div>
  <div class="row activity-infos white-box">
    <div class="row activity-labels d-flex justify-content-center">
      <div class="col-md-2 activity-label">
        <%= cl_image_tag(@activity.user.photo.key, class: "avatar-large") %>
      </div>
      <div class="col-md-2 activity-label">
        <%= cl_image_tag(@activity.user.photo.key, class: "avatar-large") %>
      </div>
