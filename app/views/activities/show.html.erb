        <%= cl_image_tag(@activity.user.photo.key, class: "avatar-large") %>
      </div>
      <div class="col-md-2 activity-label">
        <%= cl_image_tag(@activity.user.photo.key, class: "avatar-large") %>
      </div>
    </div>
    <div class="row activity-details">
      <div class="col-md-8 d-flex align-items-center">
        <%= cl_image_tag(@activity.photo.key, width: 400, height: 300, crop: :fill, class: "img-fluid") %>
      </div>
      <div class="col-md-4">
        <div class="row-mb-4">
          <h2><%= @activity.description %></h2>
        </div>
        <div class="row-mb-4 white-box">
