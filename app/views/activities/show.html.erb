<div class="m-4">
    <div class="row">
      <div class="col-lg-6 col-md-12">
        <% # Green box Activity description %>
        <div class="box-color mt-4 p-4">
          <div class="px-4 pt-4">
            <div class="text-left pt-3">
              <h1 class="text-white"><%= @activity.name %></h1>
            </div>
            <p class="text-white text-justify w-75 pb-4 border-bottom mb-0" style="min-height:250px;"><%= @activity.description %></p>
          </div>
          <div class="d-flex justify-content-start align-items-center p-4">
            <i class="text-white fas fa-map-marked-alt"></i>
            <span class="text-white text-xsmall pl-4"><%= @activity.street %> à <%= @activity.city %></span>
          </div>
          <div class="pr-4 ml-4 pb-3 d-flex w-75 flex-column justify-content-center align-items-left"> 
            <% if user_signed_in? %>
              <% if @activity.is_member_of_activity_group?(current_user) %>
                <%= link_to "Rejoindre groupe de discussion", group_path(@activity.group), class: "btn btn-lg button-full-purple m-0" %>
              <% else %>
                <%= link_to "Rejoindre groupe de discussion", group_memberships_path(@activity.group), method: :post, class: "btn btn-lg button-full-purple m-0" %>
              <% end %>
            <% else %>
              <%= link_to "Rejoindre groupe de discussion", new_user_session_path, class: "btn btn-lg button-full-purple m-0" %>
            <% end %>
          </div>
        </div>

        <% # Categories and Labels %>
        <div class="row">
          <ul class="col-xl-6 col-lg-12 col-md-6 col-sm-12 mt-4 mb-0 border-right">
            <li class="d-flex justify-content-center align-items-center">
              <h2>Labels</h2>
            </li>
            <% @activity.labels.each do |label| %>
              <li class="d-flex justify-content-center align-items-center my-4">
                <i class="<%= label.icon %> text-center w-25" style="color: #00897B; font-size: 32px;"></i>
                <p style="margin: 0;"><%= label.name %></p>
              </li>
            <% end %>  
          </ul>
          <ul class="col-xl-6 col-lg-12 col-md-6 col-sm-12 mt-4 mb-0 border-left">
            <li class="d-flex justify-content-center align-items-center">
              <h2>Catégories</h2>
            </li>
            <div class="activity-categories">
              <div class="categories d-flex flex-column align-items-center justify-content-around my-4">
                <% @activity.categories.each do |category| %>
                  <%= link_to activities_path(category_id: category.id) do %>
                    <div class="category-activity-show-card mb-4 mx-3">
                      <%= cl_image_tag(category.photo.key, transformation: [{ quality: :auto, fetch_format: :auto, width: 150, height: 90, crop: :scale }]) %>
                      <h4><%= category.name %></h4>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div> 
          </ul>
        </div>

        <% # Organisator profile %>
        <div class="border-bottom">
          <div class="position-relative d-flex justify-content-center align-items-center w-100">
            <div class="position-absolute border-top w-100" style="z-index:-1;"></div>
            <%= cl_image_tag(@activity.user.photo.key, transformation: [{ quality: :auto, fetch_format: :auto, width: 150, height: 150, crop: :thumb, gravity: :face }], class: "avatar-xlg-bordered-white-surround") %>
          </div>
          <h4 class="text-center"><%= @activity.user.nickname %></h4>

            <% # Organisator button %>
          <div class="d-flex justify-content-center flex-columns">
            <% if (current_user == @activity.user) %>
              <%= link_to "Modifier", edit_activity_path(@activity), class: "button-full-green" %>
              <%= link_to "Supprimer", activity_path(@activity, method: "delete"), class: "button-full-purple" %>
            <% else %>
              <%= render partial: "shared/user_friendship_action", locals: { user: @activity.user } %>
              <%= link_to activities_path(user: @activity.user) do %>
                <button class="btn button-full-green my-0 mx-1">Voir activités</button>
              <% end %>
            <% end %>
          </div>
        </div>

      </div>

      <% # Photo and Events %>
      <div class="col-lg-6 col-md-12">
        <div class="mt-4 pt-4 position-relative" style="left:-25%;">
          <div class="image-activity-show my-4">
            <%= cl_image_tag(@activity.photo.key, transformation: [{ quality: :auto, fetch_format: :auto, height: 300, width: 450, radius: 10, crop: :fill }], class: "my-4", style: "box-shadow: 5px 5px 10px #00796B; border-radius: 20px") %>
          </div>
        </div>
        <div class="white-box flex-md-fill" style="min-width: 400px;max-width: 500px; margin: 0 auto;">
          <h2 class="text-center">Prochaines dates</h2>
          <% if current_user == @activity.user %>
            <%= render partial: "events/form", locals: { activity: @activity } %>
          <% end %>
          <ul>
            <% @activity.events.future_events.each do |event| %>
              <%= render partial: "shared/event_card", locals: { event: event, booking: @booking } %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
</div>