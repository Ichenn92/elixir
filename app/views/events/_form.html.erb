<p>
  <button class="btn btn-primary btn-lg btn-block" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Ajouter un événement
  </button>
</p>

<div class="collapse" id="collapseExample">
  <div class="card card-body p-3 mb-4">

    <div>
      <form action="/events" method="post">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <input name="activity_id" value="<%= @activity.id %>" type="hidden">
        
        <div class="form-group">
          <label for="start_time">Début de l'événement :</label>
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" name="start_time" data-target="#datetimepicker1" style="height:65px;"/>
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="end_time">Fin de l'événement :</label>
          <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
            <input type="text" class="form-control datetimepicker-input" name="end_time" data-target="#datetimepicker2" style="height:65px;"/>
            <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
              <div class="input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block">Ajouter</button>
      </form>
    </div>

  </div>
</div>