<div class="one-box-screen">
  <div class="white-box-max-height">

    <ul class="nav nav-pills nav-justified mb-3 tabs-float" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="text-medium nav-link active" id="pills-users-tab" data-toggle="pill" href="#pills-users" role="tab" aria-controls="pills-users" aria-selected="true">users</a>
      </li>
      <li class="nav-item">
        <a class="text-medium nav-link" id="pills-activities-tab" data-toggle="pill" href="#pills-activities" role="tab" aria-controls="pills-activities" aria-selected="false">activities</a>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-users" role="tabpanel" aria-labelledby="pills-users-tab">
        <ul class="cards scrollable h-100 tab-pane fade show active" id="pills-users" role="tabpanel" aria-labelledby="pills-users-tab">
          <% @users.each do |user| %>
            <%= render partial: "shared/user-card", locals: { user: user } %>
          <% end %>
        </ul>
      </div>
      <div class="tab-pane fade" id="pills-activities" role="tabpanel" aria-labelledby="pills-activities-tab">
        <ul class="cards scrollable h-100 tabe-pane fade" id="pills-activities" role="tabpanel" aria-labelledby="pills-activities-tab">
          <% @activities.each do |user| %>
            <% # render partial: "shared/user-card", locals: { user: user } %>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
</div>