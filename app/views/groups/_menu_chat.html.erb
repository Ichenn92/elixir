<div class="white-box margin-top-50 col-md-4 mx-4">
  <h3>Mes conversations</h3>
  <% @groups.each do |group| %>
     <ul>
      <li>
        <% if group.group? %>
          <%= link_to cl_image_tag(group.photo.key, width: 100, height: 100, class: "avatar-large"), group_path(group) %>
          <%= link_to "#{group.name}", group_path(group) %>
        <% end %>
      </li>
    </ul>
    <ul>
      <li>
        <% unless group.group? %>
          <%= link_to "#{group.memberships.where.not( user: current_user).first.user.nickname }", group_path(group) %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>
